#include <stdio.h>
#include <string.h>

struct {
    char fname[20];
} directory[10]; // max 10 files

int count = 0;

int main() {
    int choice;
    char name[20];
    
    while (1) {
        printf("\n--- Single Level Directory ---\n");
        printf("1. Create File\n2. Delete File\n3. Search File\n4. Display Files\n5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: // Create
                if (count == 10) {
                    printf("Directory full!\n");
                    break;
                }
                printf("Enter file name: ");
                scanf("%s", name);

                int exists = 0;
                for (int i = 0; i < count; i++) {
                    if (strcmp(directory[i].fname, name) == 0) {
                        exists = 1;
                        break;
                    }
                }
                if (exists)
                    printf("File already exists!\n");
                else {
                    strcpy(directory[count].fname, name);
                    count++;
                    printf("File created.\n");
                }
                break;

            case 2: // Delete
                printf("Enter file name to delete: ");
                scanf("%s", name);
                int found = 0;
                for (int i = 0; i < count; i++) {
                    if (strcmp(directory[i].fname, name) == 0) {
                        found = 1;
                        for (int j = i; j < count - 1; j++) {
                            directory[j] = directory[j + 1];
                        }
                        count--;
                        printf("File deleted.\n");
                        break;
                    }
                }
                if (!found)
                    printf("File not found!\n");
                break;

            case 3: // Search
                printf("Enter file name to search: ");
                scanf("%s", name);
                found = 0;
                for (int i = 0; i < count; i++) {
                    if (strcmp(directory[i].fname, name) == 0) {
                        printf("File found: %s\n", directory[i].fname);
                        found = 1;
                        break;
                    }
                }
                if (!found)
                    printf("File not found!\n");
                break;

            case 4: // Display
                if (count == 0)
                    printf("Directory empty!\n");
                else {
                    printf("Files in directory:\n");
                    for (int i = 0; i < count; i++)
                        printf("%s\n", directory[i].fname);
                }
                break;

            case 5:
                return 0;

            default:
                printf("Invalid choice!\n");
        }
    }
}

OUTPUT:
--- Single Level Directory ---
1. Create File
2. Delete File
3. Search File
4. Display Files
5. Exit
Enter your choice: 1
Enter file name: a.txt
File created.

Enter your choice: 1
Enter file name: b.txt
File created.

Enter your choice: 4
Files in directory:
a.txt
b.txt

Enter your choice: 3
Enter file name to search: b.txt
File found: b.txt

Enter your choice: 2
Enter file name to delete: a.txt
File deleted.

Enter your choice: 4
Files in directory:
b.txt
